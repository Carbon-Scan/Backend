generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Emission {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  totalKarbon Float    @map("total_karbon")
  createdAt   DateTime @default(now()) @map("created_at")

  details EmissionDetail[]

  @@map("Emission")
}

model EmissionDetail {
  id         String   @id @default(uuid())
  emissionId String   @map("emission_id")
  produk     String
  emisi      Float
  kategori   String

  emission Emission @relation(fields: [emissionId], references: [id], onDelete: Cascade)

  @@map("EmissionDetail")
}


model Review {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  text       String
  sentiment  String?
  confidence Float?
  createdAt  DateTime @default(now()) @map("created_at")

  @@map("reviews")
}
